<%= @question.content %>

<div class="row">
  <div class="col-md-6 col-md-offset-3">

    <%= form_for(@answer) do |f| %>
      
      <div class="form-group">
        <% @question.choices.each do |choice| %>
          <%= f.radio_button :choice, choice.id, class: 'form-control', required: 'required' %> <%= choice.content %> 
        <% end %>
      </div>

      <%= f.submit '回答', class: 'btn btn-primary btn-block' %>
    <% end %>
  </div>
</div>